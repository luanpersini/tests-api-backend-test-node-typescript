{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1",
    "^tests/(.*)$": "<rootDir>/$1",        
    "@api/(.*)": ["<rootDir>/../src/api/$1"],
    "@modules/(.*)": ["<rootDir>/../src/modules/$1"],    
    "@infrastructure/(.*)": ["<rootDir>/../src/infrastructure/$1"]
  }
}
